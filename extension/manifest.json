{
  "manifest_version": 3,

  "name": "V2EX Polish",

  "version": "0.1.0",

  "description": "Make v2ex.com easier to explore with better interaction.",

  "permissions": ["scripting", "contextMenus"],

  "host_permissions": ["https://www.v2ex.com/*", "https://v2ex.com/*"],

  "icons": {
    "16": "./images/icon-16.png",
    "32": "./images/icon-32.png",
    "48": "./images/icon-48.png",
    "128": "./images/icon-128.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./scripts/toggle-icon.js"]
    },
    {
      "matches": ["https://www.v2ex.com/*", "https://v2ex.com/*"],
      "js": ["./scripts/jquery-3.5.1.min.js", "./scripts/userscripts.min.js"]
    },
    {
      "matches": ["https://www.v2ex.com/*", "https://v2ex.com/*"],
      "css": ["./css/v2ex-theme-default.min.css"],
      "run_at": "document_start"
    }
  ],

  "background": {
    "service_worker": "./scripts/background.js"
  },

  "action": {}
}
