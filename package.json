{
  "name": "v2ex_polish",
  "version": "0.1.0",
  "private": "true",
  "keywords": [
    "v2ex theme",
    "v2ex extension",
    "v2ex beautiful"
  ],
  "license": "UNLICENSED",
  "author": "LeoKu (https://github.com/Codennnn)",
  "scripts": {
    "dev": "npm-run-all --parallel watch:themes watch:scripts",
    "build": "npm-run-all --parallel build:themes build:scripts",
    "build:scripts": "tsup",
    "build:themes": "sass src/themes/default.scss:extension/css/v2ex-theme-default.min.css --no-source-map --style=compressed",
    "watch:scripts": "pnpm run build:scripts --watch",
    "watch:themes": "pnpm run build:themes --watch",
    "lint": "npm-run-all --parallel lint:es lint:style lint:prettier",
    "lint:es": "eslint **/*.{js,ts}",
    "lint:prettier": "prettier --write **/*.{md,json}",
    "lint:style": "stylelint **/*.{css,scss}"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.2.1"
  },
  "devDependencies": {
    "@codennnn/tsconfig": "^1.1.1",
    "@types/chrome": "^0.0.217",
    "@types/jquery": "^3.5.16",
    "npm-run-all": "^4.1.5",
    "prefer-code-style": "^1.1.2",
    "sass": "^1.58.0",
    "stylelint": "^14.16.1",
    "tsup": "^6.6.0",
    "typescript": "^4.9.5"
  }
}
