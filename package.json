{
  "name": "v2ex_polish",
  "version": "0.1.0",
  "private": "true",
  "keywords": [
    "v2ex theme",
    "v2ex extension",
    "v2ex beautiful"
  ],
  "license": "UNLICENSED",
  "author": "LeoKu (https://github.com/Codennnn)",
  "scripts": {
    "build": "pnpm run build:themes && pnpm run build:scripts",
    "build:scripts": "tsup",
    "build:themes": "sass src/themes/clean.scss asset/v2ex-theme-clean.min.css --no-source-map --style=compressed",
    "dev": "pnpm run build:themes && pnpm run build:scripts --watch & pnpm run build:themes --watch",
    "lint": "pnpm run lint:es & pnpm run lint:style & pnpm run lint:prettier",
    "lint:es": "eslint **/*.{js,ts}",
    "lint:prettier": "prettier --write **/*.{md,json}",
    "lint:style": "stylelint **/*.{css,scss}"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.2.1"
  },
  "devDependencies": {
    "@codennnn/tsconfig": "^1.1.1",
    "@types/jquery": "^3.5.16",
    "prefer-code-style": "^1.1.2",
    "sass": "^1.58.0",
    "stylelint": "^14.16.1",
    "tsup": "^6.6.0",
    "typescript": "^4.9.5"
  }
}
