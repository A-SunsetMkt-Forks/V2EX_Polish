{
  "name": "v2ex_plus",
  "version": "0.1.0",
  "description": "Extensions for V2EX to make it better.",
  "author": "LeoKu",
  "license": "UNLICENSED",
  "private": "true",
  "keywords": [
    "v2ex",
    "theme",
    "v2ex",
    "extension"
  ],
  "scripts": {
    "build": "pnpm run build:themes && pnpm run build:scripts",
    "build:themes": "sass src/themes/clean.scss dist/themes/v2ex-theme-clean.css --no-source-map && css-minify --dir dist/themes --output asset/",
    "build:scripts": "tsup src/web-scripts/script.ts",
    "lint:es": "eslint **/*.{js,ts}",
    "lint:style": "stylelint **/*.{css,scss}"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coolpace/V2EX_Plus.git"
  },
  "homepage": "https://github.com/coolpace/V2EX_Plus#readme",
  "devDependencies": {
    "@types/jquery": "^3.5.16",
    "css-minify": "^2.0.0",
    "prefer-code-style": "^1.0.2",
    "sass": "^1.58.0",
    "stylelint": "^14.16.1",
    "tsup": "^6.6.0",
    "typescript": "^4.9.5"
  }
}
