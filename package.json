{
  "name": "v2ex_plus",
  "version": "0.1.0",
  "description": "Extensions for V2EX to make it better.",
  "author": "LeoKu",
  "license": "UNLICENSED",
  "private": "true",
  "keywords": [
    "v2ex theme",
    "v2ex extension"
  ],
  "scripts": {
    "dev": "pnpm run build:themes && pnpm run build:scripts --watch & pnpm run build:themes --watch",
    "build": "pnpm run build:themes && pnpm run build:scripts",
    "build:themes": "sass src/themes/clean.scss asset/v2ex-theme-clean.min.css --no-source-map --style=compressed",
    "build:scripts": "tsup src/web-scripts/index.ts",
    "lint": "pnpm run lint:es & pnpm run lint:style",
    "lint:es": "eslint **/*.{js,ts}",
    "lint:style": "stylelint **/*.{css,scss}"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coolpace/V2EX_Plus.git"
  },
  "homepage": "https://github.com/coolpace/V2EX_Plus#readme",
  "devDependencies": {
    "@codennnn/tsconfig": "^1.1.1",
    "@types/jquery": "^3.5.16",
    "prefer-code-style": "^1.0.2",
    "sass": "^1.58.0",
    "stylelint": "^14.16.1",
    "tsup": "^6.6.0",
    "typescript": "^4.9.5"
  }
}
