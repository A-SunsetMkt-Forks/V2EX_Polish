{
  "manifest_version": 3,

  "name": "V2EX Polish",

  "version": "0.1.0",

  "description": "Make v2ex.com easier to explore with better interaction.",

  "icons": {
    "16": "./images/icon-16.png",
    "32": "./images/icon-32.png",
    "48": "./images/icon-48.png",
    "128": "./images/icon-128.png"
  },

  "content_scripts": [
    {
      "matches": ["https://www.v2ex.com/*", "https://v2ex.com/*"],
      "js": ["./scripts/jquery-3.5.1.min.js", "./scripts/userscripts.js"]
    }
  ]
}
